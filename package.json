{
  "name": "custom-post-type-widget-blocks",
  "version": "1.3.0",
  "description": "Custom Post Type Widgets for Block Editor (Gutenberg).",
  "author": "Thingsym",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Gutenberg"
  ],
  "homepage": "https://github.com/thingsym/custom-post-type-widget-blocks",
  "repository": {
    "type": "git",
    "url": "https://github.com/thingsym/custom-post-type-widget-blocks.git"
  },
  "bugs": "https://github.com/thingsym/custom-post-type-widget-blocks/issues",
  "main": "dist/js/blocks.js",
  "dependencies": {
    "@wordpress/api-fetch": "^6.0.0",
    "@wordpress/block-editor": "^8.1.0",
    "@wordpress/blocks": "^11.2.0",
    "@wordpress/components": "^19.3.0",
    "@wordpress/compose": "^5.1.0",
    "@wordpress/core-data": "^4.1.0",
    "@wordpress/data": "^6.2.0",
    "@wordpress/element": "^4.1.0",
    "@wordpress/i18n": "^4.3.0",
    "@wordpress/icons": "^6.2.0",
    "@wordpress/primitives": "^3.1.0",
    "@wordpress/server-side-render": "^3.1.0",
    "@wordpress/url": "^3.4.0",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@wordpress/browserslist-config": "^4.1.0",
    "@wordpress/e2e-test-utils": "^6.0.0",
    "@wordpress/e2e-tests": "^3.0.2",
    "@wordpress/jest-preset-default": "^8.0.0",
    "@wordpress/scripts": "^20.0.2",
    "@wordpress/stylelint-config": "^20.0.0",
    "autoprefixer": "^10.4.2",
    "cpy-cli": "^3.1.1",
    "cssnano": "^5.0.17",
    "enzyme": "^3.11.0",
    "eslint": "^8.8.0",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-puppeteer": "^6.1.0",
    "npm-check-updates": "^12.3.0",
    "npm-run-all": "^4.1.5",
    "po2json": "^1.0.0-beta-3",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.7",
    "stylelint": "^14.4.0",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-scss": "^4.1.0"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "postcss": {
    "map": true,
    "plugins": {
      "postcss-import": {},
      "autoprefixer": {
        "browsers": [
          "last 2 Chrome versions",
          "last 2 Firefox versions",
          "last 2 Safari versions",
          "last 2 Edge versions",
          "last 2 Opera versions",
          "last 2 iOS versions",
          "last 1 Android version",
          "last 1 ChromeAndroid version",
          "ie 11",
          "> 1%"
        ]
      }
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-scss",
      "stylelint-config-recommended-scss",
      "@wordpress/stylelint-config"
    ],
    "rules": {
      "no-descending-specificity": null,
      "no-duplicate-selectors": null,
      "block-no-empty": null
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": [
      "react-hooks"
    ],
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "jQuery": true,
      "$": false,
      "wp": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-func-assign": "off",
      "no-unused-vars": "off",
      "no-prototype-builtins": "off",
      "no-sparse-arrays": "off",
      "no-undef": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "ignorePatterns": [
      "node_modules/",
      "vendor/"
    ]
  },
  "scripts": {
    "makepot:php": "php /usr/local/share/wp-i18n/makepot.php wp-plugin ../custom-post-type-widget-blocks ../custom-post-type-widget-blocks/languages/custom-post-type-widget-blocks.pot",
    "makepot:wpcli": "wp i18n make-pot . ./languages/custom-post-type-widget-blocks.pot --include=inc,src --exclude=dist,bin,tests,node_modules,vendor",
    "msgfmt:ja": "msgfmt languages/custom-post-type-widget-blocks-ja.po -o languages/custom-post-type-widget-blocks-ja.mo",
    "msgfmt": "run-p msgfmt:*",
    "po2json:ja": "po2json languages/custom-post-type-widget-blocks-ja.po languages/custom-post-type-widget-blocks-ja-custom-post-type-widget-blocks-editor-script.json -f jed",
    "po2json:wpcli:ja": "wp i18n make-json languages/custom-post-type-widget-blocks-ja.po --no-purge",
    "po2json": "run-p po2json:*",
    "sass:blocks:style": "sass src/scss/blocks.scss dist/css/blocks.css --style expanded --no-source-map && postcss --use autoprefixer --no-map -r dist/css/blocks.css",
    "sass:blocks:style:minify": "sass src/scss/blocks.scss dist/css/blocks.min.css --style expanded --no-source-map && postcss --use autoprefixer --use cssnano --no-map -r dist/css/blocks.min.css",
    "sass:editor:style": "sass src/scss/block-editor-style.scss dist/css/block-editor-style.css --style expanded --no-source-map && postcss --use autoprefixer --no-map -r dist/css/block-editor-style.css",
    "sass:editor:style:minify": "sass src/scss/block-editor-style.scss dist/css/block-editor-style.min.css --style expanded --no-source-map && postcss --use autoprefixer --use cssnano --no-map -r dist/css/block-editor-style.min.css",
    "build:js": "wp-scripts build src/js/blocks --output-path=dist/js",
    "build:css": "run-s sass:**",
    "build:php": "cpy '**/*.php' '../../dist/blocks/' --cwd='src/blocks/' --parents",
    "build:block-json": "cpy '**/block.json' '../../dist/blocks/' --cwd='src/blocks/' --parents",
    "build:i18n": "run-s msgfmt:* po2json:*",
    "build": "run-p build:*",
    "lint:js": "wp-scripts lint-js ./dist/js/*.js",
    "lint:es": "eslint ./src/**/*.js",
    "lint:css": "stylelint dist/css/*.css dist/css/**/*.css !dist/css/*.min.css !dist/css/**/*.min.css",
    "lint:scss": "stylelint src/scss/*.scss src/scss/**/*.scss",
    "lint:pkg-json": "wp-scripts lint-pkg-json ./package.json",
    "lint:md": "wp-scripts lint-md-docs ./README.md && wp-scripts lint-md-js ./README.md",
    "lint": "run-p lint:*",
    "test:jest": "wp-scripts test-unit-js --config jest.config.js",
    "test:e2e": "wp-scripts test-e2e --config jest-puppeteer.config.js",
    "test:e2e:help": "wp-scripts test-e2e --help",
    "test": "run-p lint test:jest",
    "format:js": "wp-scripts format-js ./src/blocks",
    "watch": "wp-scripts start src/js/blocks --output-path=dist/js",
    "archive:package": "mkdir -p ./custom-post-type-widget-blocks && cpy '**/*' '!./.DS_Store' '!./bin' '!./vendor' '!./composer.json' '!./composer.lock' '!./node_modules' '!./README.md' '!./package.json' '!./package-lock.json' '!./phpcs.ruleset.xml' '!./phpmd.ruleset.xml' '!./phpstan.neon' '!./phpunit.xml' '!./README.md' '!./webpack.config.js' '!./jest.config.js' '!./jest-puppeteer.config.js' '!./src' '!./tests' '!./custom-post-type-widget-blocks-v*.zip' './custom-post-type-widget-blocks' --parents",
    "archive:zip": "zip -9 -qmr custom-post-type-widget-blocks-v$npm_package_version.zip ./custom-post-type-widget-blocks",
    "archive": "run-s build archive:package archive:zip"
  }
}
